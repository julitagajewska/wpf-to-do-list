<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Gradient Colors -->
    <Color x:Key="Gradient1">#40158093</Color>
    <Color x:Key="Gradient2">#40324a73</Color>
    <Color x:Key="Gradient3">#404c1a57</Color>
    
    <!-- Task Priority Colors -->
    <SolidColorBrush x:Key="PriorityLow" Color="#92d937" />
    <SolidColorBrush x:Key="PriorityMedium" Color="#ffc940" />
    <SolidColorBrush x:Key="PriorityHigh" Color="#ff8989" />
    
    <!-- UI Colors -->
    <SolidColorBrush x:Key="Background" Color="#272a45" />
    <SolidColorBrush x:Key="Tile" Color="#2c315d" />
    <SolidColorBrush x:Key="TaskDone" Color="#158093" />
    <SolidColorBrush x:Key="Highlight" Color="#00cdcf" />
    
