<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Gradient Colors -->
    <Color x:Key="Gradient1">#158093</Color>
    <Color x:Key="Gradient2">#324a73</Color>
    <Color x:Key="Gradient3">#4c1a57</Color>
    
    <!-- Task Priority Colors -->
    <SolidColorBrush x:Key="PriorityLow" Color="#92d937" />
    <SolidColorBrush x:Key="PriorityMedium" Color="#ffc940" />
    <SolidColorBrush x:Key="PriorityHigh" Color="#ff8989" />
    
    <!-- UI Colors -->
    <Color x:Key="Background">#272a45</Color>
    <Color x:Key="Tile">#2c315d</Color>
    <Color x:Key="TaskDone">#158093</Color>
    <Color x:Key="Highlight">#00cdcf</Color>

</ResourceDictionary>